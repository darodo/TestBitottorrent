#!/usr/bin/env python3

import sys
import argparse
import pkg_resources

parser = argparse.ArgumentParser()
parser.add_argument("algoritmo", choices=["uno", "dos"], help="Algoritmo de b√∫squeda a utilizar")
parser.add_argument("texto", help="Texto con el que desea buscar en la base de datos de preguntas")

def main(args=None):
    """The main routine."""

    if args is None:
        args = sys.argv[1:]

    args = parser.parse_args()

    if args.algoritmo == "uno":
        # Algoritmo UNO
        print("uno")

    elif args.algoritmo == "dos":
        # Algoritmo DOS
        print("dos")

    else:
        parser.print_help()

if __name__ == "__main__":
    main()
